<!DOCTYPE HTML>
<html lang="pt-br" data-bs-theme="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>@ViewData["Title"] - Admin E-Management System</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/template_admin/css/style.css">
    <link rel="shortcut icon" type="image/jpg" href="~/favicon.ico" />
</head>
<body>
    <div class="wrapper">
        <partial name="_AdminSideBarPartial" />        
        <div class="main">
            <partial name="_AdminNavBarPartial" />
            <main class="content px-3 py-2">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
            <a href="#" class="theme-toggle">
                <i class="fa-regular fa-moon"></i>
                <i class="fa-regular fa-sun" style="color: #FDB813;"></i>
            </a>
            <footer class="footer border-top px-3">
                <div class="container-fluid">
                    <div class="row text-muted mt-2">
                        <div class="col-6 text-start">
                            <p class="mb-0">
                                <a href="#" class="text-muted">
                                    <strong>E-Management System</strong>
                                </a>
                            </p>
                        </div>
                        <div class="col-6 text-end">
                            <p class="text-muted">
                                Desenvolvido por -
                                <a target="_blank" href="https://www.linkedin.com/in/vin%C3%ADcius-alarcon-52a8a820a/">Alarcon Vinícius</a>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/template_admin/js/script.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
