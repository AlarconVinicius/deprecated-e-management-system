@using EMS.WebAPI.Core.User;
@using EMS.WebApp.MVC.Extensions;
@inject IAspNetUser AppUser
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Produtos";
}

<div class="mb-3">
    <h4>Produtos</h4>
</div>
<div class="card border-0 col-md-12">
    <div class="card-header d-flex justify-content-between">
        <h5 class="card-title">
            Produtos
        </h5>
        <div class="d-flex align-items-center">
            <div class="input-group me-3">
                <input type="text"
                       class="form-control"
                       placeholder="Pesquisar"
                       aria-label="Pesquisar"
                       aria-describedby="pesquisar" />
                <button class="btn btn-outline-secondary"
                        type="button"
                        id="pesquisar">
                    <i class="fa fa-search"></i>
                </button>
            </div>
            <a class="btn btn-success align-self-center w-75">
                Adicionar Produto
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Imagem</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Peso</th>
                    <th scope="col">Estoque</th>
                    <th scope="col">Valor unitário</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Imagem ABC</td>
                    <td>Produto 001</td>
                    <td>Kilo</td>
                    <td>1</td>
                    <td>10</td>
                    <td>R$ 30,00</td>
                    <td>Desativado</td>
                    <td>
                        <a href="#" class="btn btn-info me-3"><span class="fa fa-unlock"></span></a>
                        <a href="#" class="btn btn-warning me-3"><span class="fa fa-eye"></span></a>
                        <a href="#" class="btn btn-warning me-3"><span class="fa fa-pencil-alt"></span></a>
                        <a href="#" data-bs-toggle="modal" data-bs-target="#ModalDeleteRecipe" class="btn btn-danger"><span class="fa fa-trash"></span></a>
                    </td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Imagem XYZ</td>
                    <td>Produto 002</td>
                    <td>Unidade</td>
                    <td>1</td>
                    <td>100</td>
                    <td>R$ 55,00</td>
                    <td>Ativo</td>
                    <td>
                        <a href="#" class="btn btn-info me-3"><span class="fa fa-lock"></span></a>
                        <a href="#" class="btn btn-warning me-3"><span class="fa fa-eye"></span></a>
                        <a href="#" class="btn btn-warning me-3"><span class="fa fa-pencil-alt"></span></a>
                        <a href="#" data-bs-toggle="modal" data-bs-target="#ModalDeleteRecipe" class="btn btn-danger"><span class="fa fa-trash"></span></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
